    <!-- Load services -->
    <script src="~/AngularPart/Services/authInterceptorService.js"></script>
    <script src="~/AngularPart/Services/authService.js"></script>
    <script src="~/AngularPart/Services/chatHubService.js"></script>
    <script src="~/AngularPart/Services/messageHubService.js"></script>
    <script src="~/AngularPart/Services/userService.js"></script>
    <script src="~/AngularPart/Services/chatService.js"></script>
    <!-- Load controllers -->

    <script src="~/AngularPart/Controllers/navbarController.js"></script>
    <script src="~/AngularPart/Controllers/homeController.js"></script>
    <script src="~/AngularPart/Controllers/chatController.js"></script>
    <script src="~/AngularPart/Controllers/loginController.js"></script>
    <script src="~/AngularPart/Controllers/signupController.js"></script>
    <script src="~/AngularPart/Controllers/modalController.js"></script>
    <script src="~/AngularPart/Controllers/profileController.js"></script>
    <script src="~/AngularPart/Controllers/editChatController.js"></script>
    <script src="~/AngularPart/Controllers/createChatModalController.js"></script>
