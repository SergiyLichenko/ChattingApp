<!DOCTYPE html>
<html data-ng-app="ChattingApp">
<head>
    <title>Chatting App</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <meta content="IE=edge, chrome=1" http-equiv="X-UA-Compatible" />

    <link href="//netdna.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/css/angular-busy.css" rel="stylesheet" />
    <link href="~/Content/css/angular-material-min.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap.ng.min.css" rel="stylesheet" />
    <link href="~/Content/styles.css" rel="stylesheet" />
</head>
<body class="container" ng-cloak>
    <div class="row col-md-12" data-ng-controller="NavbarController">
        <div ng-switch="isLoggedIn()">
            <div ng-switch-when="true">
                <button class="btn btn-raised btn-primary pull-right"
                        data-ng-click="logOut()">
                    LogOut
                </button>
            </div>
            <div ng-switch-when="false">
                <button class="btn btn-raised btn-success pull-right nav-btn" ui-sref="login">
                    Login
                </button>
                <button class="btn btn-raised btn-primary pull-right nav-btn" ui-sref="signup">
                    Sign Up
                </button>
            </div>
        </div>
    </div>

    <div class="row" ui-view>
    </div>

    <!-- 3rd party libraries -->
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.3.min.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-animate.min.js"></script>
    <script src="~/Scripts/angular-aria.min.js"></script>
    <script src="~/Scripts/angular-messages.min.js"></script>
    <script src="~/Scripts/angular-material.min.js"></script>
    <script src="~/Scripts/angular-route.js"></script>
    <script src="~/Scripts/angular-ui-router.min.js"></script>
    <script src="~/Scripts/angular-local-storage.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.js"></script>
    <script src="~/Scripts/ng-file-upload-shim.js"></script>
    <script src="~/Scripts/ng-file-upload.js"></script>
    <script src="~/Scripts/angular-validation-match.js"></script>
    <script src="~/Scripts/angular-busy.js"></script>
    <script src="~/Scripts/angular-signalr-hub.js"></script>
    <!-- <script src="/Scripts/angular-sanitize.js"></script>-->
    <!--

